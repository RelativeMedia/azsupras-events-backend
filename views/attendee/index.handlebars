<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Signup Date</th>
          <th>Payee</th>
          <th>Email Address</th>
          <th>Phone</th>
          <th>Username</th>
          <th>Transaction ID</td>
          <th>Amount</th>
          <th>Event</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each payments}}
        <tr>
          <td>{{formatDate createdAt 'short'}}</td>
          <td>{{firstname}} {{lastname}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
          <td>{{username}}</td>
          <td>{{transaction.id}}</td>
          <td>$ {{ formatCurrency transaction.amount 100 2}}</td>
          <td>
            {{#each cart}}
              <a href="/event/list/{{id}}">{{name}}</a>
            {{/each}}
          </td>
          <td>
          {{#if transaction.paid }}
          <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#details-{{id}}"><i class="fa fa-usd fa-lg"></i></button>
          {{else}}
          <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#details-{{id}}"><i class="fa fa-usd fa-lg"></i></button>
          {{/if}}

          <div class="modal fade" id="details-{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header">
                          Viewing Details For Transaction {{transaction.id}}
                      </div>
                      <div class="modal-body">
                          <pre class="transactionDetails">{{toJson transaction}}</pre>
                      </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                      </div>
                  </div>
              </div>
          </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
